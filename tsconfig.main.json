{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src/main",
    "resolveJsonModule": true,
    "declaration": false,
    "noEmitOnError": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist"]
} 